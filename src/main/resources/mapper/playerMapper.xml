<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="playerDao">
    <insert id="insertPlayer" parameterType="player">
        INSERT INTO PLAYERS
        (NICK, IP, CREATED_AT)
        VALUES
        (#{nick}, #{ip}, NOW())
    </insert>

    <select id="selectPlayer" parameterType="long" resultMap="playerResultMap">
        SELECT PLAYER_NO,NICK,IP,CREATED_AT FROM PLAYERS WHERE PLAYER_NO = #{id}
    </select>

    <update id="updatePlayer" parameterType="player">
        UPDATE PLAYERS SET NICK = #{nick}, IP = #{ip} WHERE PLAYER_NO = #{id}
    </update>

    <delete id="deletePlayer">
        DELETE FROM PLAYERS WHERE PLAYER_NO = #{id}
    </delete>

    <resultMap id="playerResultMap" type="player">
        <id     property="id"        column="PLAYER_NO" />
        <result property="nick"      column="NICK" />
        <result property="ip"        column="IP" />
    </resultMap>

</mapper>
